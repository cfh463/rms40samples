<div data-role="page">

    
  <div data-role="header" data-position="inline">
    <h1>Application samples</h1>
  </div>

  <div data-role="content">
	  <h2>Ruby</h2>
    <ul data-role="listview">
      <li><a href="<%= url_for :action => :app_folder %>">Getting folders where items are stored</a></li>
      <li><a href="<%= url_for :action => :set_locale %>">Set locale</a></li>
      <li><a href="<%= url_for :action => :quit_app %>">Quitting the application</a></li>
      <li><a href="<%= url_for :action => :minimize_app %>">Minimizing the application</a></li>
      <li><a href="<%= url_for :action => :restore_app %>">Restoring the application</a></li>      
    </ul>
      <h2>Javascript</h2>
    <ul data-role="listview">
      <li><a href="#" onclick="app_folder()">Getting folders where items are stored</a></li>
      <li><a href="#" onclick="set_locale()">Set locale</a></li>
      <li><a href="#" onclick="quit_app()">Quitting the application</a></li>
      <li><a href="#" onclick="minimize_app()">Minimizing the application</a></li>
      <li><a href="#" onclick="restore_app()">Restoring the application</a></li>      
    </ul>
  </div>

</div>

<script type="text/javascript">
   function app_folder() {
     var appFolder = Rho.Application.appBundleFolder();
     alert(appFolder);
   }

   function set_locale(){
	Rho.Application.setLocale('en')
	var current_locale = Rho.Application.locale();
	alert(current_locale)
}
   
function quit_app() {
Rho.Application.quit();	
}

function minimize_app(){
Rho.Application.minimize();
	
}
function restore_app() {
	Rho.Application.restore();
}
</script>
