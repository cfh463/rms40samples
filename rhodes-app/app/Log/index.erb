<div data-role="page">

    
  <div data-role="header" data-position="inline">
    <h1>Logs samples</h1>
  </div>

  <div data-role="content">
  <h2>Ruby</h2>
    <ul data-role="listview">
      <li><a href="<%= url_for :action => :log_categories %>">Logging categories</a></li>
      <li><a href="<%= url_for :action => :log_memory_usage %>">Logging memory usage</a></li>
      <li><a href="#">Logging to remote location</a></li>
      <li><a href="<%= url_for :action => :show_log %>">Show log</a></li>
      <li><a href="<%= url_for :action => :read_log_file %>">Read log file</a></li>
      <li><a href="<%= url_for :action => :clean_log_file %>">Clean log file</a></li>
    </ul>

  <h2>Javascript</h2>
  <ul data-role="listview">
    <li><a href="#" onclick="log_categories()">Logging categories</a></li>
    <li><a href="#" onclick="log_memory_usage()">Logging memory usage</a></li>
    <li><a href="#">Logging to remote location</a></li>
    <li><a href="#" onclick="show_log()">Show log</a></li>
    <li><a href="#" onclick="read_log_file()">Read log file</a></li>
    <li><a href="#" onclick="clean_log_file()">Clean log file</a></li>
  </ul>

  </div>


<script type="text/javascript">
  
  
  function log_categories() {
    Rho.Log.info("Consectetuer adipiscing elit", "Lorem Ipsum");
    Rho.Log.info("Foo acquired value Bar in method Baz", "Miscellaneous");
  }
  
  /* TODO: This API does not seem to be implemented yet in Javascript */
  function log_memory_usage() {
    // Request that memory usage be logged automatically by the system every second
    Rho.Log.memoryPeriod = 1000;
  }
  
  /* TODO: This API does not seem to be implemented yet in Javascript */
  function show_log() {
    Rho.Log.showLog();
  }

  /* TODO: This API does not seem to be implemented yet in Javascript */
  function read_log_file() {
    var log_contents = Rho.Log.readLogFile(400);
    alert('Log file contents: '+log_contents);
  }

  /* TODO: This API does not seem to be implemented yet in Javascript */
  function clean_log_file() {
    var log_contents_before = Rho.Log.readLogFile(400);
    alert('Log file contents before cleaning: '+log_contents_before);
    Rho.Log.cleanLogFile();
    var log_contents_after = Rho.Log.readLogFile(400);
    alert('Log file contents after cleaning: '+log_contents_after);
  }

</script>

</div>


