<EXAMPLES >
           <EXAMPLE title="Popup with a single button">
            <SECTIONS>
               
              <SECTION>
               <DESC>
                   Show a message to the user with a single button for dismissing the dialog
               </DESC>
               <CODE>
                <RUBY>
           <![CDATA[
Rho::Notification.showPopup({
  :message => "Hello, world!",
  :title => "Greeting",
  :icon => :info,
  :buttons => ["Fine"]
})
]]>
                 </RUBY>
                <JAVASCRIPT>
           <![CDATA[
Rho.Notification.showPopup({
    message : "Hello, world!",
    title : "Greeting",
    icon : "info",
    buttons : ["Fine"]
  });
]]>
                 </JAVASCRIPT>
               </CODE>
               </SECTION>
               </SECTIONS>
           </EXAMPLE>
</EXAMPLES>
